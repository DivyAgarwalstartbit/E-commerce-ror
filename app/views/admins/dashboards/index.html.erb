<div class="admin-dashboard">
  <h1 class="dashboard-title">Admin Dashboard</h1>

  <div class="stats-grid">
    <div class="stat-card">
      <div class="stat-label">Total Customers</div>
      <div class="stat-value"><%= @total_customers %></div>
    </div>

    <div class="stat-card">
      <div class="stat-label">Total Products</div>
      <div class="stat-value"><%= @total_products %></div>
    </div>

    <div class="stat-card warning">
      <div class="stat-label">Out of Stock</div>
      <div class="stat-value"><%= @out_of_stock_products %></div>
    </div>

    <div class="stat-card success">
      <div class="stat-label">Active Orders</div>
      <div class="stat-value"><%= @active_orders %></div>
    </div>
  </div>

  <div class="dashboard-sections">
    <div class="dashboard-box">
      <h3>Recent Customers</h3>
      <ul>
        <% @recent_customers.each do |customer| %>
          <li><%= customer.email %></li>
        <% end %>
      </ul>
    </div>

    <div class="dashboard-box">
      <h3>Low Stock Products</h3>
      <ul>
        <% @low_stock_products.each do |product| %>
          <li>
            <%= product.product.name %>
            <span class="stock-count"><%= product.stock_qunatity %> left</span>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<style>
.admin-dashboard {
  padding: 32px;
  background: #f9fafb;
  min-height: 100vh;
  font-family: system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
}

.dashboard-title {
  font-size: 24px;
  font-weight: 700;
  margin-bottom: 24px;
  color: #111827;
}

/* Stats */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 20px;
  margin-bottom: 32px;
}

.stat-card {
  background: #ffffff;
  border-radius: 12px;
  padding: 20px;
  box-shadow: 0 8px 24px rgba(0,0,0,0.05);
}

.stat-label {
  font-size: 13px;
  color: #6b7280;
  margin-bottom: 8px;
}

.stat-value {
  font-size: 28px;
  font-weight: 700;
  color: #111827;
}

.stat-card.warning {
  border-left: 5px solid #f59e0b;
}

.stat-card.success {
  border-left: 5px solid #22c55e;
}

/* Sections */
.dashboard-sections {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
  gap: 24px;
}

.dashboard-box {
  background: #ffffff;
  border-radius: 12px;
  padding: 20px;
  box-shadow: 0 8px 24px rgba(0,0,0,0.05);
}

.dashboard-box h3 {
  margin: 0 0 12px;
  font-size: 16px;
  font-weight: 600;
  color: #111827;
}

.dashboard-box ul {
  list-style: none;
  padding: 0;
  margin: 0;
}

.dashboard-box li {
  padding: 10px 0;
  border-bottom: 1px solid #e5e7eb;
  font-size: 14px;
  display: flex;
  justify-content: space-between;
}

.dashboard-box li:last-child {
  border-bottom: none;
}

.stock-count {
  font-size: 12px;
  font-weight: 600;
  color: #ef4444;
}

</style>