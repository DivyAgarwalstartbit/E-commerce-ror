<div class="admin-page">
  <div class="admin-header">
    <h2>All Orders</h2>
  </div>

  <table class="admin-table">
    <thead>
      <tr>
        <th><input type="checkbox"></th>
        <th>Order ID</th>
        <th>Customer</th>
        <th>Total</th>
        <th>Status</th>
        <th>Date</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><input type="checkbox"></td>

          <td>#<%= order.id %></td>

          <td>
            <div class="table-user">
              <div>
                <strong><%= order.user.email %></strong>
              </div>
            </div>
          </td>

          <td>$<%= order.total_price %></td>

          <td>
            <span class="badge <%= order.status %>">
              <%= order.status.capitalize %>
            </span>
          </td>

          <td><%= order.created_at.strftime("%d %b %Y") %></td>

          <td>
            <%= link_to "View", admins_order_path(order), class: "btn-view" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


<style>
.admin-page {
  padding: 30px;
  background: #f7f7f7;
}

.admin-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
}

.admin-header h2 {
  font-size: 22px;
  font-weight: 600;
}

/* TABLE */
.admin-table {
  width: 100%;
  border-collapse: collapse;
  background: white;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 4px 10px rgba(0,0,0,0.03);
}

.admin-table thead {
  background: #f1f1f1;
}

.admin-table th,
.admin-table td {
  padding: 14px 16px;
  font-size: 14px;
  border-bottom: 1px solid #eee;
}

.admin-table tbody tr:hover {
  background: #fafafa;
}

.admin-table th {
  text-align: left;
  font-weight: 600;
  color: #444;
}

/* USER COLUMN */
.table-user {
  display: flex;
  align-items: center;
  gap: 10px;
}

.avatar-img {
  width: 38px;
  height: 38px;
  border-radius: 8px;
  object-fit: cover;
  background: #ddd;
}

/* STATUS BADGES */
.badge {
  padding: 4px 10px;
  border-radius: 20px;
  font-size: 12px;
  font-weight: 500;
}

.badge.placed {
  background: #e6f4ea;
  color: #1e7f43;
}

.badge.pending {
  background: #fff4e5;
  color: #b86b00;
}

.badge.cancelled {
  background: #fdecea;
  color: #b42318;
}

/* BUTTON */
.btn-view {
  padding: 6px 12px;
  background: #0d6efd;
  color: white;
  border-radius: 6px;
  text-decoration: none;
  font-size: 12px;
}
.btn-view:hover {
  background: #0b5ed7;
}

</style>