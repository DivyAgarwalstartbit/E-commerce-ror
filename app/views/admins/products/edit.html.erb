<h3><%= @product.name%></h3>
<style>
/* Container styling */
form {
  max-width: 700px;
  margin: 21px auto;
  padding: 40px;
  background-color: #fff;
  border-radius: 15px;
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
  font-family: 'Arial', sans-serif;
}

/* Headings */
h1, h2, h3 {
  text-align: center;
  margin-top:10px ;
  color: #333;
}

/* Input fields styling */
input[type="text"],
input[type="number"],
textarea,
select,
input[type="file"] {
  width: 100%;
  padding: 14px 18px;
  border: 1px solid #ddd;
  border-radius: 12px;
  font-size: 16px;
  box-sizing: border-box;
  margin-bottom: 20px;
  transition: all 0.3s ease;
}

input[type="text"]:focus,
input[type="number"]:focus,
textarea:focus,
select:focus,
input[type="file"]:focus {
  outline: none;
  border-color: #e50914;
  box-shadow: 0 0 10px rgba(229, 9, 20, 0.2);
}

/* Labels */
label {
  font-weight: bold;
  display: block;
  margin-bottom: 6px;
}

/* Buttons */
button, input[type="submit"] {
  background-color: #e50914;
  color: white;
  font-weight: bold;
  padding: 14px 40px;
  border: none;
  border-radius: 30px;
  cursor: pointer;
  text-transform: uppercase;
  font-size: 14px;
  transition: all 0.3s ease;
  display: inline-block;
  margin-top: 10px;
}

button:hover, input[type="submit"]:hover {
  background-color: #b0070f;
  transform: scale(1.05);
}

/* Variant rows */
.variant-row {
  display: flex;
  gap: 10px;
  margin-bottom: 10px;
}

.variant-row input {
  flex: 1;
  border-radius: 10px;
}

/* Remove link */
.variant-row .remove-variant {
  color: #b30000;
  text-decoration: underline;
  cursor: pointer;
}

/* Add Variant button */
#add-variant {
  display: block;
  margin-bottom: 20px;
  background-color: #e50914;
  color: white;
  border-radius: 30px;
  padding: 10px 20px;
  cursor: pointer;
  border: none;
  font-weight: bold;
  transition: background-color 0.3s ease, transform 0.2s ease;
}

#add-variant:hover {
  background-color: #b0070f;
  transform: scale(1.05);
}

/* Combinations Table */
#combinations-table {
  width: 100%;
  border-collapse: collapse;
  margin-bottom: 30px;
}

#combinations-table th, #combinations-table td {
  border: 1px solid #ddd;
  padding: 10px;
  text-align: center;
  font-size: 14px;
  border-radius: 8px;
}

#combinations-table th {
  background-color: #f5f5f5;
  font-weight: bold;
}

/* Responsive */
@media (max-width: 768px) {
  .variant-row {
    flex-direction: column;
  }

  #combinations-table td, #combinations-table th {
    font-size: 12px;
    padding: 6px;
  }
}

</style>
<%= render 'admins/products/form' %>