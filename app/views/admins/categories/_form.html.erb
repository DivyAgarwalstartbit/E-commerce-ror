<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-6">

      <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body p-5">

          <h2 class="text-center mb-4">
            <%= @category.new_record? ? "New Category" : "Edit Category" %>
          </h2>

          <%= form_with(model: [:admins, @category], local: true) do |form| %>

            <% if @category.errors.any? %>
              <div class="alert alert-danger rounded-3">
                <strong><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</strong>
                <ul class="mb-0 mt-2">
                  <% @category.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <!-- Category Name -->
            <div class="mb-4">
              <%= form.label :name, "Category Name", class: "form-label fw-semibold" %>
              <%= form.text_field :name,
                    class: "form-control form-control-lg rounded-3",
                    placeholder: "Enter category name",
                    required: true %>
            </div>

            <!-- Collection Select -->
            <div class="mb-4">
              <%= form.label :collection_id, "Collection", class: "form-label fw-semibold" %>
              <%= form.collection_select :collection_id,
                    Collection.order(:name),
                    :id,
                    :name,
                    { prompt: "Select Collection" },
                    { class: "form-select form-select-lg rounded-3", required: true } %>
            </div>

            <!-- Buttons -->
            <div class="d-flex justify-content-between mt-4">
              <%= link_to "Cancel",
                          admins_categories_path,
                          class: "btn btn-outline-secondary px-4 rounded-3" %>

              <%= form.submit @category.new_record? ? "Create Category" : "Update Category",
                              class: "btn btn-dark px-4 rounded-3" %>
            </div>

          <% end %>

        </div>
      </div>

    </div>
  </div>
</div>
