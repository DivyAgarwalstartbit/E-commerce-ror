 <div class="breadcrumb-option">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__links">
                        <a href="./index.html"><i class="fa fa-home"></i> Home</a>
                        <span>My Wishlist</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Breadcrumb End -->

    <!-- Shop Cart Section Begin -->
    <section class="shop-cart spad">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="shop__cart__table">
          <table>
            <thead>
              <tr>
                <th>Product</th>
                <th>Price</th>
                <th>action</th>
              </tr>
            </thead>
<tbody>
  <% if @items.any? %>
    <% @items.each do |item| %>
      <% product = item.product %>
      <tr>
        <td class="cart__product__item">
          <div class="cart__product__item__image">
            <% if product&.featured_image.attached? %>
              <%= image_tag product.featured_image, alt: product.name, width: 100, height: 100 %>
            <% else %>
              <%= image_tag "default-product.jpeg", alt: "No image available", width: 100, height: 100 %>
            <% end %>
          </div>

          <div class="cart__product__item__title">
            <% if product %>
              <h6><%= product.name %></h6>
              <div class="rating">
                <% 5.times do %>
                  <i class="fa fa-star"></i>
                <% end %>
              </div>
            <% else %>
              <h6>Product not available</h6>
            <% end %>
          </div>
        </td>

        <td class="cart__price">
          <% if product %>
            <%= number_to_currency(product.product_variant_combinations.first.price) %>
          <% else %>
            N/A
          <% end %>
        </td>

        <td>
          <%= button_to wishlist_item_path(item), method: :delete, class: "remove-wishlist-btn btn btn-danger btn-sm", data: { confirm: "Are you sure?" } do %>
            Remove
          <% end %>
        </td>
      </tr>
    <% end %>
  <% else %>
    <tr>
      <td colspan="3" class="text-center">No items in your wishlist.</td>
    </tr>
  <% end %>
</tbody>

          </table>
        </div>
      </div>
    </div>

    <!-- Buttons -->
    <div class="row">
      <div class="col-lg-6">
        <div class="cart__btn">
          <%= link_to "Continue Shopping", root_path %>
        </div>
      </div>
    </div>

    </section>