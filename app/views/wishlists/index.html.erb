              <h6><%= product.name %></h6>
              <small>
                Variant: <%= combination.product_variant_options.map(&:value).join(", ") %>
              </small>
              <div class="rating">
      <i class="fa fa-star"></i>
      <i class="fa fa-star"></i>
      <i class="fa fa-star"></i>
      <i class="fa fa-star"></i>
      <i class="fa fa-star"></i>
    </div>

            <% else %>
              <h6>Product not available</h6>
            <% end %>
             
          </div>
        </td>

        <td class="cart__price">
          <% if product %>
            <%= number_to_currency(product.product_variant_options.first.price) %>
          <% else %>
            N/A
          <% end %>
        </td>

        <td>
          
          <button type="button" class="remove-wishlist-btn btn btn-danger btn-sm" data-wishlist-id="<%= item.id %>" style="padding: 5px 10px; background-color: #d9534f; color: white; border: none; border-radius: 3px; cursor: pointer;">
