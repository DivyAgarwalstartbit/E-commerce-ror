                   <div class="shop__sidebar">

  <!-- Categories Accordion -->
  <div class="sidebar__categories">
    <div class="section-title">
      <h4>Categories</h4>
    </div>
    <div class="categories__accordion">
      <div class="accordion" id="accordionExample">
        <% ["Womens", "Mens", "Kids"].each_with_index do |gender, idx| %>
          <% gender_categories = Category.where(gender: gender) %>
          <div class="card">
            <div class="card-heading <%= 'active' if idx == 0 %>">
              <a data-toggle="collapse" data-target="#collapse_<%= gender.downcase %>"><%= gender %></a>
            </div>
            <div id="collapse_<%= gender.downcase %>" class="collapse <%= 'show' if idx == 0 %>" data-parent="#accordionExample">
              <div class="card-body">
                <ul>
                  <% gender_categories.each do |cat| %>
                    <% new_params = params.permit(:min_price, :max_price, size: [], color: []).to_h.merge(category_id: cat.id) %>
                    <li class="<%= 'selected' if params[:category_id].to_i == cat.id %>">
                      <%= link_to cat.name, categories_path(new_params) %>
                    </li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Shop by Price -->
  <div class="sidebar__filter">
    <div class="section-title">
      <h4>Shop by price</h4>
    </div>
    <div class="filter-range-wrap">
      <div class="price-range ui-slider ui-corner-all ui-slider-horizontal ui-widget ui-widget-content"
           data-min="0" data-max="500"></div>
      <div class="range-slider">
        <div class="price-input">
          <p>Price:</p>
          <input type="text" id="minamount" name="min_price" value="<%= params[:min_price] %>">
          <input type="text" id="maxamount" name="max_price" value="<%= params[:max_price] %>">
        </div>
      </div>
    </div>
    <% filter_params = params.permit(:category_id, size: [], color: []).to_h %>
    <%= link_to "Filter", categories_path(filter_params.merge(min_price: params[:min_price], max_price: params[:max_price])) %>
  </div>

  <!-- Shop by Size -->
  <div class="sidebar__sizes">
    <div class="section-title">
      <h4>Shop by size</h4>
    </div>
    <div class="size__list">
      <% ["XXS","XS","S","M","L","XL"].each do |size| %>
        <% new_params = params.permit(:category_id, :min_price, :max_price, color: []).to_h.merge(size: [size]) %>
        <label for="<%= size.downcase %>">
          <%= link_to size, categories_path(new_params), class: "size-filter-link" %>
          <input type="checkbox" id="<%= size.downcase %>" <%= "checked" if Array(params[:size]).include?(size) %> >
          <span class="checkmark"></span>
        </label>
      <% end %>
    </div>
  </div>

  <!-- Shop by Color -->
  <div class="sidebar__color">
    <div class="section-title">
      <h4>Shop by color</h4>
    </div>
    <div class="size__list color__list">
      <% ["Black","White","Red","Grey","Blue","Beige","Green","Yellow"].each do |color| %>
        <% new_params = params.permit(:category_id, :min_price, :max_price, size: []).to_h.merge(color: [color]) %>
        <label for="<%= color.downcase %>">
          <%= link_to color, categories_path(new_params), class: "color-filter-link" %>
          <input type="checkbox" id="<%= color.downcase %>" <%= "checked" if Array(params[:color]).include?(color) %> >
          <span class="checkmark"></span>
        </label>
      <% end %>
    </div>
  </div>

</div>
                   
                </div>
               <div class="col-lg-9 col-md-9">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-lg-4 col-md-6">
        <div class="product__item <%= 'sale' if product.compare_price.present? && product.compare_price > product.price %>">
          
          <div class="product__item__pic set-bg" data-setbg="<%= url_for(product.featured_image) if product.featured_image.attached? %>">
            <% if product.compare_price.present? && product.compare_price > product.price %>
              <div class="label">Sale</div>
            <% elsif product.created_at >= 7.days.ago %>
              <div class="label new">New</div>
            <% elsif product.product_variants.sum(:in_stock) == 0 %>
              <div class="label stockout stockblue">Out Of Stock</div>
            <% end %>

            <ul class="product__hover">
              <% if product.featured_image.attached? %>
                <li><a href="<%= url_for(product.featured_image) %>" class="image-popup"><span class="arrow_expand"></span></a></li>
              <% end %>
              <li><a href="#"><span class="icon_heart_alt"></span></a></li>
              <li><a href="#"><span class="icon_bag_alt"></span></a></li>
            </ul>
          </div>

          <div class="product__item__text">
            <h6><a href="<%= product_path(product) %>"><%= product.name %></a></h6>
            <div class="rating">
              <% 5.times do %>
                <i class="fa fa-star"></i>
              <% end %>
            </div>
            <div class="product__price">
              $ <%= product.price %>
              <% if product.compare_price.present? && product.compare_price > product.price %>
                <span>$ <%= product.compare_price %></span>
              <% end %>
            </div>
          </div>

        </div>
      </div>
    <% end %>
  </div>
