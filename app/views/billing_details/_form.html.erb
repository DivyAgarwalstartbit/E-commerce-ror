<%= form_with model: @billing_detail, class: "checkout__form" do |f| %>

<div class="row">
<div class="col-lg-12">
<h5>Billing detail</h5>
<div class="row">

<div class="col-lg-6">
  <div class="checkout__form__input">
    <p>First Name *</p>
    <%= f.text_field :first_name %>
  </div>
</div>

<div class="col-lg-6">
  <div class="checkout__form__input">
    <p>Last Name *</p>
    <%= f.text_field :last_name %>
  </div>
</div>

<div class="col-lg-12">
  <div class="checkout__form__input">
    <p>Country *</p>
    <%= f.text_field :country, id: "country" %>
  </div>

  <div class="checkout__form__input">
    <p>Address *</p>
    <%= f.text_field :street_address, id: "address" %>
    <%= f.text_field :apartment_name, placeholder: "Apartment / Suite" %>
  </div>

  <div class="checkout__form__input">
    <p>City *</p>
    <%= f.text_field :city, id: "city" %>
  </div>

  <div class="checkout__form__input">
    <p>State *</p>
    <%= f.text_field :state, id: "state" %>
  </div>

  <div class="checkout__form__input">
    <p>Postcode *</p>
    <%= f.text_field :postal_code, id: "zip" %>
  </div>
</div>

<div class="col-lg-6">
  <div class="checkout__form__input">
    <p>Phone *</p>
    <%= f.text_field :phone_number %>
  </div>
</div>

<div class="col-lg-6">
  <div class="checkout__form__input">
    <p>Email *</p>
    <%= f.email_field :email %>
  </div>
</div>

</div>
</div>
</div>
<div class="col-lg-4">
  <button type="submit" class="site-btn">Save Address</button>
</div>

<% end %>


<style>

.checkout.spad {
  padding: 60px 0;
}

.checkout__form {
  max-width: 900px;   /* center width */
  margin: 10px auto;     /* center form */
  background: #fff;
  padding: 35px 40px;
  border-radius: 10px;
  box-shadow: 0 10px 30px rgba(0,0,0,0.06);
}
.checkout__form__input {
  margin-bottom: 18px;
}

.checkout__form__input p {
  font-size: 14px;
  font-weight: 600;
  margin-bottom: 6px;
}

.checkout__form__input input {
  width: 100%;
  height: 45px;
  border: 1px solid #ddd;
  padding: 0 12px;
  border-radius: 6px;
  font-size: 14px;
  transition: 0.2s;
}

.checkout__form__input input:focus {
  border-color: #e53637;
  outline: none;
  box-shadow: 0 0 0 2px rgba(229,54,55,0.1);
}
.checkout-save-btn {
  text-align: center;
  margin-top: 30px;
}

.checkout-save-btn button {
  padding: 14px 40px;
  background: #e53637;
  color: white;
  border: none;
  border-radius: 30px;
  font-size: 16px;
  font-weight: 600;
  cursor: pointer;
  transition: 0.2s;
}

.checkout-save-btn button:hover {
  background: #c12b2c;
}

.checkout h5 {
  text-align: center;
  font-size: 22px;
  font-weight: 700;
  margin-bottom: 25px;
}


</style>