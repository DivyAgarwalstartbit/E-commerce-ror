<div class="container-user">
  <div class="left">
    <h2>LOG IN</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-input" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group remember-me">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.submit "Sign In", class: "form-submit" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>

  <div class="right">
    <div class="brand">Solar Vision</div>
    <div class="headline">See the Sun,<br> Own the Style.</div>
    <div class="badges">
      <div class="badge">
        <svg viewBox="0 0 24 24"><path d="M12 2L15 8H9L12 2Z" /></svg>
        Made with recycled materials
      </div>
      <div class="badge">
        <svg viewBox="0 0 24 24"><path d="M12 2L15 8H9L12 2Z" /></svg>
        UVA and UVB protection
      </div>
    </div>
  </div>
</div>
