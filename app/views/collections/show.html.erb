    <!-- Collection Filter Script -->
    <script>
    document.addEventListener("DOMContentLoaded", function() {
      const collectionId = <%= @collection.id %>;
      let filterTimeout;

      function applyFilters() {
        clearTimeout(filterTimeout);
        filterTimeout = setTimeout(() => {
          // Get all filter values
          const sizes = Array.from(document.querySelectorAll('.size-filter:checked')).map(el => el.value);
          const colors = Array.from(document.querySelectorAll('.color-filter:checked')).map(el => el.value);
          const minPrice = document.getElementById('minamount').value;
          const maxPrice = document.getElementById('maxamount').value;

          // Build query params
          const params = new URLSearchParams();
          sizes.forEach(size => params.append('size[]', size));
          colors.forEach(color => params.append('color[]', color));
          if (minPrice) params.append('min_price', minPrice);
          if (maxPrice) params.append('max_price', maxPrice);

          console.log("Applying filters:", {sizes, colors, minPrice, maxPrice});

          // Fetch filtered products
          fetch(`/collections/${collectionId}?${params.toString()}&format=json`, {
            method: "GET",
            headers: {
              "X-Requested-With": "XMLHttpRequest",
              "Accept": "application/json"
            }
          })
          .then(response => response.json())
          .then(data => {
            updateProductsGrid(data.products);
          })
          .catch(error => {
            console.error("Error:", error);
          });
        }, 300);
      }

      function updateProductsGrid(products) {
        const grid = document.getElementById('products-grid');
        
        if (products.length === 0) {
          grid.innerHTML = '<div class="col-12 text-center"><p>No products found matching your filters.</p></div>';
          return;
        }

        grid.innerHTML = products.map(product => `
          <div class="col-lg-4 col-md-6 product-item">
            <div class="product__item ${product.compare_price && product.compare_price > product.price ? 'sale' : ''}">
              <div class="product__item__pic set-bg" data-setbg="${product.featured_image_url || ''}">
                ${product.is_sale ? '<div class="label">Sale</div>' : ''}
                ${product.is_new ? '<div class="label new">New</div>' : ''}
                <ul class="product__hover">
                  <li><a href="${product.featured_image_url || ''}" class="image-popup"><span class="arrow_expand"></span></a></li>
                  <li><a href="#"><span class="icon_heart_alt"></span></a></li>
                  <li><a href="#"><span class="icon_bag_alt"></span></a></li>
                </ul>
              </div>
              <div class="product__item__text">
                <h6><a href="/products/${product.id}">${product.name}</a></h6>
                <div class="rating">
                  <i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i>
                </div>
                <div class="product__price">
                  $ ${parseFloat(product.price).toFixed(2)}
                  ${product.compare_price ? `<span>$ ${parseFloat(product.compare_price).toFixed(2)}</span>` : ''}
                </div>
              </div>
            </div>
          </div>
        `).join('');
      }

      // Add event listeners to all filters
      document.querySelectorAll('.size-filter, .color-filter, .price-filter').forEach(filter => {
        filter.addEventListener('change', applyFilters);
        filter.addEventListener('keyup', applyFilters);
      });

      console.log("Collection filters initialized");
    });
    </script>
