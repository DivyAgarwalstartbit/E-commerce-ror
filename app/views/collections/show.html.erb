        <a data-toggle="collapse" data-target="#collapse_<%= collection.name.parameterize %>"><%= collection.name %></a>
      </div>
      <div id="collapse_<%= collection.name.parameterize %>" class="collapse <%= 'show' if idx == 0 %>" data-parent="#accordionExample">
        <div class="card-body">
          <ul>
            <% collection.categories.each do |category| %>
              <% new_params = params.permit(:min_price, :max_price, size: [], color: []).to_h.merge(category_id: category.id) %>
              <li class="<%= 'selected' if params[:category_id].to_i == category.id %>">
                <%= link_to category.name, collection_path(collection, new_params) %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>
</div>




            </div>
          </div>

          <!-- Shop by Price -->
          <div class="sidebar__filter">
            <div class="section-title">
              <h4>Shop by price</h4>
            </div>
            <div class="filter-range-wrap">
              <div class="price-range ui-slider ui-corner-all ui-slider-horizontal ui-widget ui-widget-content"
                   data-min="0" data-max="500"></div>
              <div class="range-slider">
                <div class="price-input">
                  <p>Price:</p>
                  <input type="text" id="minamount" name="min_price" class="price-filter" value="<%= params[:min_price] %>">
                  <input type="text" id="maxamount" name="max_price" class="price-filter" value="<%= params[:max_price] %>">
                </div>
              </div>
            </div>
          </div>

          <!-- Shop by Size -->
          <div class="sidebar__sizes">
            <div class="section-title">
              <h4>Shop by size</h4>
            </div>
            <div class="size__list">
              <% ["XXS","XS","S","M","L","XL"].each do |size| %>
                <label for="<%= size.downcase %>">
                  <input type="checkbox" class="size-filter" id="<%= size.downcase %>" value="<%= size %>" <%= "checked" if Array(params[:size]).include?(size) %> >
                  <span class="checkmark"></span>
                  <%= size %>
                </label>
              <% end %>
            </div>
          </div>

          <!-- Shop by Color -->
          <div class="sidebar__color">
            <div class="section-title">
              <h4>Shop by color</h4>
            </div>
            <div class="size__list color__list">
              <% ["Black","White","Red","Grey","Blue","Beige","Green","Yellow"].each do |color| %>
                <label for="<%= color.downcase %>">
                  <input type="checkbox" class="color-filter" id="<%= color.downcase %>" value="<%= color %>" <%= "checked" if Array(params[:color]).include?(color) %> >
                  <span class="checkmark"></span>
                  <%= color %>
                </label>
              <% end %>
            </div>
          </div>

        </div>
      </div>

      <!-- Products Grid -->
      <div class="col-lg-9 col-md-9">
        <div class="row" id="products-grid">
          <% @products.each do |product| %>
            <div class="col-lg-4 col-md-6 product-item">
              <div class="product__item <%= 'sale' if product.compare_price.present? && product.compare_price > product.price %>">
                
                <div class="product__item__pic set-bg" data-setbg="<%= url_for(product.featured_image) if product.featured_image.attached? %>">
                  <% if product.compare_price.present? && product.compare_price > product.price %>
                    <div class="label">Sale</div>
                  <% elsif product.created_at >= 7.days.ago %>
                    <div class="label new">New</div>
                  <% end %>

                  <ul class="product__hover">
                    <% if product.featured_image.attached? %>
                      <li><a href="<%= url_for(product.featured_image) %>" class="image-popup"><span class="arrow_expand"></span></a></li>
                    <% end %>
                    <li><a href="#"><span class="icon_heart_alt"></span></a></li>
                    <li><a href="#"><span class="icon_bag_alt"></span></a></li>
                  </ul>
                </div>

                <div class="product__item__text">
                  <h6><a href="<%= product_path(product) %>"><%= product.name %></a></h6>
                  <div class="rating">
                    <% 5.times do %>
                      <i class="fa fa-star"></i>
                    <% end %>
                  </div>
                  <div class="product__price">
                    $ <%= number_with_precision(product.price, precision: 2) %>
                    <% if product.compare_price.present? && product.compare_price > product.price %>
                      <span>$ <%= number_with_precision(product.compare_price, precision: 2) %></span>
                    <% end %>
                  </div>
                </div>

              </div>
            </div>
          <% end %>
        </div>

