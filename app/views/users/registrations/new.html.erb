<h2 style="padding-top:20px ">Sign Up</h2>

<style>
  /* Container styling */
  form {
    max-width: 400px;
    margin: 0px auto 50px auto;
    padding: 40px;
    background-color: #fff;
    border-radius: 15px;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    font-family: 'Arial', sans-serif;
  }

  h2 {
    text-align: center;
    margin-bottom: 30px;
    color: #333;
    font-size: 28px;
  }

  /* Field styling */
  .field {
    margin-bottom: 25px;
  }

  input[type="email"],
  input[type="password"],
  input[type="text"],
  textarea {
    width: 100%;
    padding: 14px 18px;
    border: 1px solid #ddd;
    border-radius: 12px;
    font-size: 16px;
    transition: all 0.3s ease;
    box-sizing: border-box;
  }

  input[type="email"]:focus,
  input[type="password"]:focus,
  input[type="text"]:focus,
  textarea:focus {
    outline: none;
    border-color: #e50914;
    box-shadow: 0 0 10px rgba(229, 9, 20, 0.2);
  }

  /* Placeholder styling */
  input::placeholder {
    color: #aaa;
    font-style: italic;
  }

  /* Password hint */
  small {
    display: block;
    margin-top: 5px;
    font-size: 12px;
    color: #666;
  }

  /* Submit button */
  .actions {
    text-align: center;
    margin-top: 20px;
  }

  input[type="submit"] {
    background-color: #e50914;
    color: white;
    font-weight: bold;
    padding: 14px 50px;
    border: none;
    border-radius: 30px;
    cursor: pointer;
    text-transform: uppercase;
    font-size: 16px;
    transition: all 0.3s ease;
  }

  input[type="submit"]:hover {
    background-color: #b0070f;
    transform: scale(1.05);
  }

  /* Links styling */
  .links {
    margin-top: 20px;
    text-align: center;
  }

  .links a {
    color: #e50914;
    text-decoration: none;
    font-weight: bold;
    transition: color 0.3s ease;
  }

  .links a:hover {
    color: #b0070f;
  }

  /* Error messages */
  .error_messages {
    background-color: #ffe5e5;
    border: 1px solid #ffcccc;
    padding: 10px 15px;
    border-radius: 10px;
    margin-bottom: 20px;
    color: #b30000;
    font-size: 14px;
  }
</style>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password" %>
    <% if @minimum_password_length %>
      <small>(<%= @minimum_password_length %> characters minimum)</small>
    <% end %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password" %>
  </div>

  <div class="actions">
    <%= f.submit "Register" %>
  </div>

  <div class="links">
    <%= render "users/shared/links" %>
  

  </div>
<% end %>
